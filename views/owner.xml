<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- 
    	Owner Form 
    -->
	<record 
		model="ir.ui.view" 
		id="property_tax_calculator.view_partner_form">

        <field name="name">property_tax_calculator.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Partners">
            <sheet>
                <div class="oe_button_box" name="button_box">

                    <button 
                    	name="toggle_active" 
                    	type="object"
                        class="oe_stat_button" 
                        icon="fa-archive">
                        
                        <field 
                        	name="active" 
                        	widget="boolean_button"
                            options='{"terminology": "archive"}'
                        />
                    </button>
                </div>

                <field 
                	name="image" 
                	widget='image' 
                	class="oe_avatar" 
                	options='{"preview_image": "image_medium", "size": [90, 90]}'
                />

                <div class="oe_title">
                    <field name="is_company" invisible="1"/>
                    <field name="commercial_partner_id" invisible="1"/>
                    <field 
                    	name="company_type" 
                    	widget="radio"
                        class="oe_edit_only"
                        options="{'horizontal': true}"
                    />
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name" />
                    </h1>

                    <div name="options">
                        <div attrs="{'invisible': [('tenant', '=', True)]}">
                            <field name="owner"/>
                            <label for="owner"/>
                        </div>
                        <div attrs="{'invisible': [('owner', '=', True)]}">
                            <field name="tenant"/>
                            <label for="tenant"/>
                        </div>
                    </div>
                </div>

                <group>
                    <group>
                        <label for="street" string="Address"/>
                        <div class="o_address_format">
                            
                            <field 
                            	name="street" 
                            	placeholder="Street..." 
                            	class="o_address_street"
                         	/>
                            <field 
                            	name="street2" 
                            	placeholder="Street 2..." 
                            	class="o_address_street"
                         	/>
                            <field 
                            	name="city" 
                            	placeholder="City" 
                            	class="o_address_city"
                         	/>
                            <field 
                            	name="state_id" 
                            	class="o_address_state" 
                            	placeholder="State" 
                            	options='{"no_open": True}'
                         	 	context="{'country_id': country_id, 'zip': zip}"
                         	/>
                            <field 
                            	name="zip" 
                            	placeholder="ZIP" 
                            	class="o_address_zip"
                         	/>
                            <field 
                            	name="country_id" 
                            	placeholder="Country" 
                            	class="o_address_country"
                            	options='{"no_open": True, "no_create": True}'
                         	/>
                        </div>
                    </group>
                    <group>
                        <field name="phone" widget="phone"/>
                        <field name="mobile" widget="phone"/>
                        <field name="user_ids" invisible="1"/>
                        <field 
                        	name="email" 
                        	widget="email" 
                        	attrs="{'required': [('user_ids','!=', [])]}"
                        />
                    </group>
                </group>

                <notebook colspan="4">
                    <page 
                    	name="personal_information" 
                    	string="Personal Information" >

                        <group>
                            <group string="Citizenship &amp; Other Information">

                                <field 
                                	name="nationality" 
                                	widget="many2many_tags"
                                	options='{"no_open": True, "no_create": True}'
                                />
                                <field name="identification_id"/>
                                <field name="passport_id"/>
                            </group>
                            <group string="Status">
                                <field name="gender"/>
                                <field name="marital"/>
                                <field 
		                        	name="title" 
		                        	options='{"no_open": True}'
		                            attrs="{'invisible': [('is_company', '=', True)]}"
		                        />
		                        <field name="lang"/>
                            </group>
                            <group string="Birth">
                                <field name="birthday"/>
                            </group>
                        </group>
                    </page>

                    <page string="Tenant Info" >
	                  	<field name="tenants_ids">
	                    	<tree 
	                    		string="Tenant Lines" 
	                    		editable="bottom">
	                    		
		                      	<field name="name"/>
		                      	<field name="citizen"/>
		                      	<field name="rent"/>
		                      	<field name="tax"/>
	                    	</tree>
	                  	</field>
	                </page>

	                <page name='important_detail' string="Important Detail">
	                	<group>
	                	<group>
	                        <field name="bus_id"/>
	                        <field name="citizen"/>
	                        <field name="vrn"/>
	                        <field name="tin"/>
	                        <field name="efd"/>
	                        <field name="assess"/>
	                        <field name="tax"/>
	                    </group>
	                    <group>
	                        <field name="killbill_id"/>
	                        <field name="branch"/>
	                        <field name="building"/>
	                        <field name="valued"/>
	                        <field name="area_own"/>
	                        <field name="property_tax"/>
	                        <field name="property_valuation"/>
                    	</group>
                    	</group>
                    </page>

                    <page name='internal_notes' string="Internal Notes">
                        <field 
                        	name="comment" 
                        	placeholder="Internal note..."
                        />
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

	<!-- Action  -->
      	<act_window id="property_tax_calculator.action_all_owners"
			name="All Owners"
			res_model="res.partner"
			view_mode="tree,form"
			domain="[('customer', '=', True)]"
			context="{'search_default_customer':1,'default_owner':1}"
			limit="80" 
		/>

    <!-- Menuitem -->
	    <menuitem 
			name="Owner" 
			id="property_tax_calculator.owner" 
			parent="property_tax_calculator.menu_1"
			sequence='2'
			action="property_tax_calculator.action_all_owners"
	    />

</odoo>